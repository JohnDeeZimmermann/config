// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // Tab things. Almost as good as harpoon.
      "ctrl-1": ["task::Spawn", { "task_name": "harpoon open 1" }],
      "ctrl-2": ["task::Spawn", { "task_name": "harpoon open 2" }],
      "ctrl-3": ["task::Spawn", { "task_name": "harpoon open 3" }],
      "ctrl-4": ["task::Spawn", { "task_name": "harpoon open 4" }],
      "ctrl-5": ["task::Spawn", { "task_name": "harpoon open 5" }],
      "ctrl-6": ["task::Spawn", { "task_name": "harpoon open 6" }],
      "ctrl-shift-1": ["task::Spawn", { "task_name": "harpoon set 1" }],
      "ctrl-shift-2": ["task::Spawn", { "task_name": "harpoon set 2" }],
      "ctrl-shift-3": ["task::Spawn", { "task_name": "harpoon set 3" }],
      "ctrl-shift-4": ["task::Spawn", { "task_name": "harpoon set 4" }],
      "ctrl-shift-5": ["task::Spawn", { "task_name": "harpoon set 5" }],
      "ctrl-shift-6": ["task::Spawn", { "task_name": "harpoon set 6" }],
      "space h 1": ["task::Spawn", { "task_name": "harpoon open 1" }],
      "space h 2": ["task::Spawn", { "task_name": "harpoon open 2" }],
      "space h 3": ["task::Spawn", { "task_name": "harpoon open 3" }],
      "space h 4": ["task::Spawn", { "task_name": "harpoon open 4" }],
      "space h 5": ["task::Spawn", { "task_name": "harpoon open 5" }],
      "space h 6": ["task::Spawn", { "task_name": "harpoon open 6" }],
      "space h s 1": ["task::Spawn", { "task_name": "harpoon set 1" }],
      "space h s 2": ["task::Spawn", { "task_name": "harpoon set 2" }],
      "space h s 3": ["task::Spawn", { "task_name": "harpoon set 3" }],
      "space h s 4": ["task::Spawn", { "task_name": "harpoon set 4" }],
      "space h s 5": ["task::Spawn", { "task_name": "harpoon set 5" }],
      "space h s 6": ["task::Spawn", { "task_name": "harpoon set 6" }],
      "space h l": ["task::Spawn", { "task_name": "harpoon edit" }],
      "space h a": ["task::Spawn", { "task_name": "harpoon add" }],
      "space h h": ["task::Spawn", { "task_name": "to HTML" }],
      "space h c": ["task::Spawn", { "task_name": "to CSS" }],
      "space h t": ["task::Spawn", { "task_name": "to TS" }],

      // Leader actions
      "space f f": "file_finder::Toggle", // Find files
      "space d": ["workspace::SendKeystrokes", "\" _ d"],
      "space shift-d": ["workspace::SendKeystrokes", "\" _ D"],
      "space c": ["workspace::SendKeystrokes", "\" _ c"],
      "space shift-c": ["workspace::SendKeystrokes", "\" _ C"],
      "space x": ["workspace::SendKeystrokes", "\" _ x"],
      "space shift-x": ["workspace::SendKeystrokes", "\" _ X"],
      "space": null,

      // Method navigation
      "ö m": "vim::NextMethodStart",
      "Ö M": "vim::NextMethodEnd",
      "Ö m": "vim::NextMethodEnd",
      "ä m": "vim::PreviousMethodStart",
      "Ä M": "vim::PreviousMethodEnd",
      "Ä m": "vim::PreviousMethodEnd",
      "ö ö": "vim::NextSectionStart",
      "Ö Ö": "vim::NextSectionEnd",
      "Ö ö": "vim::NextSectionEnd",
      "ä ä": "vim::PreviousSectionStart",
      "Ä Ä": "vim::PreviousSectionEnd",
      "Ä ä": "vim::PreviousSectionEnd",
      "ctrl-ä": "vim::SelectLargerSyntaxNode",
      "ctrl-ö": "vim::SelectSmallerSyntaxNode",

      // Bookmarks
      "space n": "vim::ToggleMarksView",
      "n": ["workspace::SendKeystrokes", "`"],
      "N": ["workspace::SendKeystrokes", "`"],
      "M": ["workspace::SendKeystrokes", "m"]
    }
  },
  {
    "context": "Editor && (vim_mode == normal) && !VimWaiting",
    "bindings": {
      "backspace": ["workspace::SendKeystrokes", "\" _ d d k"],
      "ctrl-j": "editor::MoveLineDown",
      "ctrl-k": "editor::MoveLineUp",
      "space shift-l": ["workspace::SendKeystrokes", "m z y y p ` z"],
      "space l": ["workspace::SendKeystrokes", "m z y y p ` z j"]
    }
  },
  {
    "context": "Editor && (vim_mode == visual) && !VimWaiting",
    "bindings": {
      "backspace": ["workspace::SendKeystrokes", "\" _ d"],
      "ctrl-j": "editor::MoveLineDown",
      "ctrl-k": "editor::MoveLineUp",
      "space shift-l": ["workspace::SendKeystrokes", "m z y ` > p ` z"],
      "space l": ["workspace::SendKeystrokes", "y ` > p ` ]"],
      "space y": ["workspace::SendKeystrokes", "y ` >"]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "secondary-space": "editor::ShowCompletions",
      "secondary-p": "editor::ShowSignatureHelp",
      "secondary-e": "file_finder::Toggle",
      "secondary-i": "assistant::InlineAssist"
    }
  },
  {
    "context": "",
    "bindings": {
      // Window management
      "secondary-ctrl-r": "workspace::ToggleRightDock",
      "secondary-ctrl-l": "workspace::ToggleLeftDock",
      "secondary-ctrl-b": "workspace::ToggleBottomDock",
      "secondary-shift-i": "agent::ToggleFocus",
      "secondary-shift-r": "task::Spawn"
    }
  },
  {
    "context": "((Editor || ProjectPanel || GitPanel) && (vim_mode == normal || vim_mode == visual) && !VimWaiting) ",
    "bindings": {
      "space v t": "project_panel::ToggleFocus",
      "space v g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel && !editing",
    "bindings": {
      "j": ["workspace::SendKeystrokes", "down"],
      "k": ["workspace::SendKeystrokes", "up"]
    }
  },
  {
    "context": "Editor && (vim_mode == visual) && extension == tex",
    "bindings": {
      "secondary-b": [
        "workspace::SendKeystrokes",
        "c \\textbf{ cmd-v } escape"
      ],
      "secondary-k": [
        "workspace::SendKeystrokes",
        "c \\textit{ cmd-v } escape"
      ],
      "secondary-m": ["workspace::SendKeystrokes", "c \\( cmd-v \\) escape"],
      "secondary-shift-m": [
        "workspace::SendKeystrokes",
        "c \\[ cmd-v \\] escape"
      ],
      "secondary-ctrl-m": [
        "workspace::SendKeystrokes",
        "c \\begin{equation} enter tab cmd-v enter \\end{equation} escape"
      ]
    }
  },
  {
    "context": "Editor && (vim_mode == insert) && extension == tex",
    "bindings": {
      "cmd-b": ["workspace::SendKeystrokes", "\\textbf{} left"],
      "cmd-k": ["workspace::SendKeystrokes", "\\textit{} left"],
      "secondary-m": ["workspace::SendKeystrokes", "\\(\\) left left"],
      "secondary-shift-m": ["workspace::SendKeystrokes", "\\[\\] left left"],
      "secondary-ctrl-m": [
        "workspace::SendKeystrokes",
        "\\begin{equation} enter enter \\end{equation} up tab"
      ]
    }
  }
]
