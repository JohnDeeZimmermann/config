// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "horizontal_scroll_margin": 10.0,
  "agent_buffer_font_size": 14.0,
  "search": {
    "include_ignored": false
  },
  "bottom_dock_layout": "full",
  "tab_bar": {
    "show": true
  },
  "agent_servers": {
    "claude": {
      "default_mode": "acceptEdits"
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "show_edit_predictions": true,
  "languages": {
    "Markdown": {
      "show_edit_predictions": true
    },
    "TypeScript": {
      "show_edit_predictions": true,
      "tab_size": 4
    },
    "Rust": {
      "show_edit_predictions": false
    },
    "Java": {
      "show_edit_predictions": true,
      "use_autoclose": true,
      "auto_indent_on_paste": true,
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--style=file", "--assume-filename={buffer_path}"]
        }
      }
    },
    "LaTeX": {
      "show_edit_predictions": true,
      "formatter": "language_server",
      "inlay_hints": {
        "show_value_hints": false
      }
    },
    "C": {
      "show_edit_predictions": false
    },
    "JSONC": {
      "show_edit_predictions": false
    },
    "Zig": {
      "show_edit_predictions": false
    },
    "C++": {
      "show_edit_predictions": false,
      "tab_size": 4,
      "wrap_guides": [100],
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--style=file", "--assume-filename={buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": [
          "--query-driver=/opt/jdz/zig++",
          "--function-arg-placeholders=0"
        ]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        // get more cargo-less diagnostics from rust-analyzer,
        // which might include false-positives (those can be turned off by their names)
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "checkOnSave": true,
        "cargo": {
          "allTargets": true
        },
        "check": {
          "workspace": true
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "latexFormatter": "latexindent",
          "latexindent": {
            "modifyLineBreaks": true,
            "replacement": null,
            "local": "/Users/johnzimmermann/.config/latexindent/latexindent.yaml"
          }
        }
      }
    },
    "ltex": {
      "settings": {
        "ltex": {
          "checkFrequency": "edit"
        }
      }
    }
  },
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "vertical_scroll_margin": 20.0,
  "scroll_beyond_last_line": "one_page",
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5-thinking"
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "grok-4-fast-reasoning"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "GPT-4.1"
    },
    "model_parameters": []
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "wrap_guides": [120],
  "ui_font_size": 15,
  // "buffer_font_family": "Comic Code Ligatures",
  // "buffer_font_size": 15,

  "buffer_font_family": "Comic Code",
  "buffer_font_size": 14.5,
  "buffer_font_weight": 500,
  "buffer_line_height": "standard",
  "buffer_font_features": {},

  "terminal": {
    "font_size": 13,
    "font_fallbacks": ["ComicShannsMono Nerd Font Mono"]
  },
  "theme": {
    "dark": "Tokyo Maple",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true
  },
  "icon_theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte"
  },
  "format_on_save": "off",
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  // Editor toolbar related settings
  "toolbar": {
    "breadcrumbs": false, // Whether to show breadcrumbs.
    "quick_actions": false, // Whether to show quick action buttons.
    "selections_menu": false, // Whether to show the Selections menu
    "agent_review": false, // Whether to show agent review buttons
    "code_actions": false // Whether to show code action buttons
  },
  "agent_ui_font_size": 14.0,
  "project_panel": {
    "indent_size": 15,
    "dock": "right"
  },
  "file_finder": {
    "include_ignored": "indexed",
    "git_status": true,
    "modal_max_width": "large",
    "skip_focus_for_active_in_search": true
  },
  "language_models": {
    "openai": {
      "available_models": [
        {
          "name": "gpt-5",
          "display_name": "gpt-5 high",
          "reasoning_effort": "high",
          "max_tokens": 272000,
          "max_completion_tokens": 20000
        },
        {
          "name": "gpt-5",
          "display_name": "gpt-5 medium",
          "reasoning_effort": "medium",
          "max_tokens": 272000,
          "max_completion_tokens": 20000
        }
      ]
    }
  }
}
